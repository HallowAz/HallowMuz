<div class="profile_singer">
<h2><%=@singer[:name]%></h2>
    <h3>Песни</h3>
    <div class="profole_song">
        <%count = 0%>
        <%@singer.songs.reverse.each do |song|%>
            <div class="song">
                <p><%=song[:name]%></p>
                <audio 
                controls
                src="/music/<%=song[:name].gsub(' ', '_')%>.mp3">
                    Your browser does not support the 
                    <code>audio</code> element.
                </audio>
                <%=form_with url: adding_path do |form|%>
                <%=form.hidden_field :song_id, value: song[:id] %>
                <%=form.submit('Добавить')%>
                <%end%>
            </div>
            <%count+=1%>
            <%break if count == 10%>
        <%end%>
    </div>
</div>

<%=link_to 'Назад', home_aut_path%>
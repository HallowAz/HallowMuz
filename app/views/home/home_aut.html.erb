<div class="body_home">
    <div class="home_new_songs">
        <h3>Новинки</h3>
        <%count = 0%>
        <%Song.all.reverse.each do |song|%>
            <div class="song">
                <p><%=song[:name]%></p>
                <audio
                controls
                src="/music/<%=song[:name].gsub(' ', '_')%>.mp3">
                    Your browser does not support the 
                    <code>audio</code> element.
                </audio>
                <%=form_with url: adding_path do |form|%>
                <%=form.hidden_field :song_id, value: song[:id] %>
                <%=form.submit('Добавить')%>
                <%end%>
            </div>
            <%count+=1%>
            <%break if count == 10%>
        <%end%>
    </div>

    <div class="singers">
    <h3>Исполнители</h3>
        <%count = 0%>
        <%Singer.all.each do |singer|%>
            <div class="singer">
                <%=form_with url: singers_profile_path, method: :get do |form|%>
                    <div class = "SingerIcon"><img src="/singer_avatars/<%=singer[:name].gsub(' ', '_')%>.png" height="80px">
                    </div>
                    <%=form.hidden_field :name, value: singer[:name]%>
                    <%=form.submit(singer[:name])%>
                <%end%>
                <br><br><br>
            </div>
            <%count+=1%>
            <%break if count == 5%>
        <%end%>
    </div>
</div>